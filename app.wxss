.hint {
  position: relative;
  bottom:400rpx;
  z-index: 100;
}
.hint-box {
  overflow: hidden;
  width:264rpx;
  margin:0 auto;
  background: #000;
  opacity: 0.8;
  border-radius: 16rpx ;
  padding:21rpx 24rpx;
  text-align: center;
  color:rgba(255,255,255,1);
  font-size:30rpx;
  line-height:36rpx;
  font-family:SourceHanSansCN-Medium;
}
.hint-anim {
  -webkit-animation-name: toast-anim;
  animation-name: toast-anim;
  -webkit-animation-duration: 500ms;
  animation-duration: 500ms;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both
}

@keyframes toast-anim {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(.3,.3,.3);
    transform: scale3d(.3,.3,.3)
  }

  50% {
    opacity: 1
  }
}

/*  加载更多   */
.weui-loading {
  margin: 0 10rpx;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  margin: 30rpx auto;
  line-height: 15rpx;
  font-size: 30rpx;
  text-align: center;
  color: white;
}
.weui-loadmore__tips {
  display: inline-block;
  color: #4f2607;
  vertical-align: middle;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.feedback-anim {
  -webkit-animation-name: feedback-anim;
  animation-name: feedback-anim;
  -webkit-animation-duration: 500ms;
  animation-duration: 500ms;
  -webkit-animation-fill-mode: both;
