.wx-getuserinfo-dialog{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.dialog-bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.6;
}

.dialogbg-base{
  position: absolute;
  width: 560rpx;
  height: 320rpx;
  z-index: 102;
  background: #ffffff;
  border-radius: 10rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.wx-getuserinfo-title{
  text-align: center;
  margin-top: 25rpx;
  font-size: 42rpx;
  color: #212121;
}
.wx-getuserinfo-content{
  text-align: center;
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #4A4A4A;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.wx-getuserinfo-btok{
  position: absolute;
  bottom: 0;
  width: 100%;
  color: #212121;
  background: white;
  border-radius: 0;
  border: 0.5rpx solid #9B9B9B;
}
