/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.usermotto {
  margin-top: 200px;
  text-align: center;
  position: relative;
}

.usermotto button{
  height: 128rpx;
}

.list {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: rebeccapurple;
  transition: transform .3s ease;
  transform: translate3d(0,100%,0);
}

.list-show {
  transform: translateZ(0);
  bottom: 128rpx;
}

